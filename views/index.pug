include mixins.pug

doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        link(href="./styles/style.css", rel="stylesheet")
    body.w-full.h-full.overflow-hidden
        header.flex.flex-col.text-sm
            .flex.w-full.justify-between.items-start
                div
                    image.h-14.float-left(src='./styles/logo.png')
                div
                    p.font-bold.text-2xl.whitespace-pre.leading-thight.uppercase STATEMENT
            .flex.w-full.justify-between.items-start
                div.flex.flex-col.flex-1.pt-2
                    .text-sm.leading-4.text-nowrap John Dough | HH-1337
                    .text-sm.leading-4.text-nowrap John Dough | (602) 602-6020
                    .text-sm.leading-4.text-nowrap 123 Money St | Tucson, AZ 85715
                div.flex.w-full.justify-between.items-end.w-auto
                    .flex.flex-col.flex-1.items-center.py-2.px-8.border-r-2(class="border-black/10")
                        .font-bold.text-sm.leading-4.text-right.w-full.text-nowrap $100.00
                        .text-sm.leading-4.text-right.w-full.text-nowrap Starting balance
                        .text-sm.leading-4.text-right.w-full.text-nowrap 05/01/2024
                    .flex.flex-col.flex-1.items-center.py-2.px-8
                        .font-bold.text-sm.leading-4.text-right.w-full.text-nowrap $50.00
                        .text-sm.leading-4.text-right.w-full.text-nowrap Ending balance
                        .text-sm.leading-4.text-right.w-full.text-nowrap 10/31/2024
        .w-full.py-4
            table.w-full.border-collapse.text-xs.break-inside-auto
                thead.uppercase.table-header-group
                    tr.border-y-2(class="border-black/10")
                        th.p-2.font-medium.text-left.text-textSecondary(class="w-6/12") INVOICES / TRANSACTIONS
                        th.p-2.font-medium.text-right.text-textSecondary(class="w-2/12") DATE
                        th.p-2.font-medium.text-right.text-textSecondary(class="w-2/12") AMOUNT
                        th.p-2.font-medium.text-right.text-textSecondary(class="w-2/12") BALANCE
                tbody
                    tr.break-inside-avoid.break-after-auto.border-y-2(class="border-black/10")
                        td.p-2
                            .flex.gap-x-2
                                div.flex.items-center.justify-items-center.w-8
                                    +invoiceIcon
                                .min-w-0
                                    p.font-medium May 2024 // 05/01/2024
                                    p.text-textSecondary 240807000000
                        td.p-2.text-right.font-medium 05/29/2024
                        td.p-2.text-right $100.00
                        td.p-2.text-right $100.00
                    tr.break-inside-avoid.break-after-auto.border-y-2(class="border-black/10")
                        td.p-2
                            .flex.gap-x-2
                                div.flex.items-center.justify-items-center.w-8
                                    +paymentSuccessIcon
                                .min-w-0
                                    p.text-textSecondary.font-bold COMPLETE
                                    p.text-textSecondary Visa••••9285 | PaymentID: 0123456 | 5/30/24
                        td.p-2.text-right.font-medium 05/29/2024
                        td.p-2.text-right $100.00
                        td.p-2.text-right $100.00
                    tr.break-inside-avoid.break-after-auto.border-y-2(class="border-black/10")
                        td.p-2
                            .flex.gap-x-2
                                div.flex.items-center.justify-items-center.w-8
                                    +invoiceIcon
                                .min-w-0
                                    p.font-medium May 2024 // 05/01/2024
                                    p.text-textSecondary 240807000000
                        td.p-2.text-right.font-medium 05/29/2024
                        td.p-2.text-right $100.00
                        td.p-2.text-right $100.00
                    tr.break-inside-avoid.break-after-auto.border-y-2(class="border-black/10")
                        td.p-2
                            .flex.gap-x-2
                                div.flex.items-center.justify-items-center.w-8
                                    +paymentFailedIcon
                                .min-w-0
                                    p.text-textSecondary.font-bold FAILED
                                    p.text-textSecondary Visa••••9285 | PaymentID: 0123456 | 5/30/24
                        td.p-2.text-right.font-medium 05/29/2024
                        td.p-2.text-right $100.00
                        td.p-2.text-right $100.00
            div.w-full.text-xs.break-inside-avoid
                .pt-2.flex.items-center.justify-between
                    .flex.items-center.gap-3.divide-x-2(class="divide-black/10")
                        .flex.flex-col.items-end
                            .text-blue-700.bg-blue-50.whitespace-pre.font-bold.px-1.rounded Current
                            .text-base.font-medium $0.00
                        .flex.flex-col.items-end.pl-3
                            .text-lime-700.bg-lime-50.whitespace-pre.font-bold.px-1.rounded 1-30 days
                            .text-base.font-medium $0.00
                        .flex.flex-col.items-end.pl-3
                            .text-amber-700.bg-orange-50.whitespace-pre.font-bold.px-1.rounded 31-60 days
                            .text-base.font-medium $0.00
                        .flex.flex-col.items-end.pl-3
                            .text-orange-700.bg-orange-50.whitespace-pre.font-bold.px-1.rounded 61-90 days
                            .text-base.font-medium $0.00
                        .flex.flex-col.items-end.pl-3
                            .text-red-700.bg-red-50.whitespace-pre.font-bold.px-1.rounded 90+ days
                            .text-base.font-medium $0.00
                    .flex.items-center.gap-3
                        .flex.flex-col.items-end
                            .text-textSecondary.whitespace-pre Balance
                            .text-base.font-medium $0.00
                .mt-3.text-left.text-xxs Any amount paid in excess of outstanding Invoices will be applied to Account balance.
                .mt-3.text-center.p-2.rounded-lg.bg-blue-50.font-bold
                        | Invoice was generated on 06/01/2024 @ 7:30PM
